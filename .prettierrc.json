{
    "plugins": ["@shufo/prettier-plugin-blade", "prettier-plugin-tailwindcss", "@prettier/plugin-php"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "tabWidth": 4
            }
        }
    ],
    "printWidth": 1000,
    "sortTailwindcssClasses": true
}
  